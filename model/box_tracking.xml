      </body>
      <body name='obstacle4' pos="0 -3 0.5" euler="0 0 0">
				<joint name='joint4x' type='slide' axis='1 0 0' pos = '0 0 0'/>
        <joint name='joint4y' type='slide' axis='0 1 0' pos = '0 0 0'/>
				<geom type="box" size=".5 .5 .5" rgba="0 0 1 1" mass="1"/>
        <camera name="obstacle_camera4" pos="0 0 1" zaxis="0 0 1"/>
      </body>
    </worldbody>
    <actuator>
      <motor name="force" joint="robot"  gear="1" />
    </actuator>
</mujoco>
