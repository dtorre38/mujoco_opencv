        <camera name="obstacle_camera1" pos="0 0 1" zaxis="0 0 1"/>
      </body>
      <body name='obstacle2' pos="0 3 0.5" euler="0 0 0">
				<joint name='joint2x' type='slide' axis='1 0 0' pos = '0 0 0'/>
